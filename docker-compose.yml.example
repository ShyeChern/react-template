version: "3.7"
services:
  app:
    image: node:16
    ports:
      - 5000:5000
    working_dir: /app
    depends_on:
      - db
    restart: always
    command: bash -c 'npm install --production && npm start'
    volumes:
      - ./:/app
      - /app/node_modules # avoid copy to node_modules from local

  postgresql:
    image: postgres:13
    ports:
      - '5432:5432'
    restart: always
    volumes:
      - db:/var/lib/postgresql/data
    environment:
      POSTGRES_DB: ${DB_NAME}
      POSTGRES_USER: ${DB_USER}
      POSTGRES_PASSWORD: ${DB_PASS}

  pgadmin:
    image: dpage/pgadmin4
    restart: always
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@admin.com
      PGADMIN_DEFAULT_PASSWORD: ${DB_PASS}
    ports:
      - '5050:80' # http://localhost:5050 to access pgadmin
volumes:
  db:
